<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp"
    android:id="@+id/cvTop5"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="?colorPrimary"
        android:padding="16dp"
        android:id="@+id/linearTop5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/posiciontop5"
            android:text="1"
            android:textSize="60dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:background="@color/white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"

            >
            <TextView
                android:id="@+id/nombreEntidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Entidad"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/cantidadUsuarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuarios en el estado: #"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/puntosEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puntos acumulados: #"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:textSize="18dp" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>