<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/indigo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:layout_marginTop="25dp"
        android:weightSum="1">

        <ImageView
            android:layout_marginLeft="25dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/ic_trivia_formacion"
            android:layout_gravity="center_vertical"/>
        <View
            android:layout_width="5dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@color/white"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/trivia_formacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trivia"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/nombre_partido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre_partido"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:textSize="18dp" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/NuevaPartida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_gravity="center"
        android:text="@string/nueva_partida"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="50dp"/>
    <Button
        android:id="@+id/MisEstadisticas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_gravity="center"
        android:text="@string/estadisticas"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"/>
    <Button
        android:id="@+id/AdministrarPreguntas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_gravity="center"
        android:text="@string/administrar_preguntas"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"/>
    <com.dd.processbutton.iml.ActionProcessButton
        android:id="@+id/btnSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Nueva Partida"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        custom:pb_colorComplete="@color/green_complete"
        custom:pb_colorNormal="@color/blue_normal"
        custom:pb_colorPressed="@color/blue_pressed"
        custom:pb_colorProgress="@color/purple_progress"
        custom:pb_textComplete="Bienvenido"
        custom:pb_textProgress="Cargando Preguntas"
        custom:pb_textError="Error"
        custom:pb_colorError="@color/red_error" />

</LinearLayout>