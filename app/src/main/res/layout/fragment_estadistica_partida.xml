<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimary">

<TextView
    android:textStyle="bold"
    android:id="@+id/finPartida"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/finPartida"
    android:textColor="@color/white"
    android:layout_gravity="center"
    android:layout_marginTop="50dp"
    android:textSize="@dimen/txt_20sp"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/starOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_star"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/starTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_star"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/starThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_star"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/starOneNull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_star_no_points"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/starTwoNull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_star_no_points"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/starThreeNull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_star_no_points"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>

    </LinearLayout>

    <View
        android:id="@+id/viewRating"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@color/white"
        android:layout_gravity="center"
        />

    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textPuntosConseguidos"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/estadisticasTriviaPequeño"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/valuePuntosConseguidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/puntosConseguidos"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/estadisticasTriviaGrande"/>

        <TextView
            android:id="@+id/textPuntosConseguidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" puntos"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/estadisticasTriviaGrande"/>

    </LinearLayout>
        <View
        android:id="@+id/viewPuntos"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textCorrectas"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/estadisticasTriviaPequeño"/>

    <TextView
        android:id="@+id/valueRespuestasCorrectas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/respuestasCorrectas"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/estadisticasTriviaGrande"/>
    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textIncorrectas"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/estadisticasTriviaPequeño"/>
    <TextView
        android:id="@+id/valueRespuestasIncorrectas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/respuestasIncorrectas"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/estadisticasTriviaGrande"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <Button
        android:id="@+id/buttonVolverMenuPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="@string/volverMenuPrincipal"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>
    </RelativeLayout>
</LinearLayout>