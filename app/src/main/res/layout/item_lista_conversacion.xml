<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <!-- Nombre del otro Usuario -->
    <TextView
        android:id="@+id/valueNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        android:textSize="18dp"
        android:text="@string/nombreEjemplo"
        />

    <!-- Separator -->
    <View
        android:layout_width="2dp"
        android:layout_height="18dp"
        android:layout_marginLeft="5dp"
        android:background="@color/grisOscuro"
        android:layout_toRightOf="@id/valueNombre"/>

    <!-- Estado -->

    <TextView
        android:id="@+id/valueEstado"
        android:layout_marginLeft="15dp"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/valueNombre"
        android:text="@string/estado"
        />

    <!-- Municipio -->

    <TextView
        android:id="@+id/valueMunicipio"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/valueEstado"
        android:text="@string/municipio"
        />

    <!-- Cargo -->

    <TextView
        android:id="@+id/labelCargo"
        android:layout_marginLeft="5dp"
        android:textSize="13dp"
        android:textColor="@color/grisOscuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valueNombre"
        android:layout_toRightOf="@id/valueAdjunto"
        android:text="@string/cargo"
        />

    <TextView
        android:id="@+id/valueCargo"
        android:layout_marginLeft="5dp"
        android:textSize="13dp"
        android:textColor="@color/grisOscuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valueNombre"
        android:layout_toRightOf="@id/labelCargo"
        android:text="@string/cargoEjemplo"
        />

    <!-- Comite -->

    <TextView
        android:id="@+id/labelComite"
        android:layout_marginLeft="5dp"
        android:textSize="13dp"
        android:textColor="@color/grisOscuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelCargo"
        android:text="@string/comite"
        />

    <TextView
        android:id="@+id/valueComite"
        android:layout_marginLeft="5dp"
        android:textSize="13dp"
        android:textColor="@color/grisOscuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valueCargo"
        android:layout_toRightOf="@id/labelComite"
        android:text="@string/comiteEjemplo"
        />

    <TextView
        android:id="@+id/labelRol"
        android:layout_marginLeft="5dp"
        android:textSize="13dp"
        android:textColor="@color/grisOscuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelComite"
        android:text="@string/tipoUsuario"
        />

    <TextView
        android:id="@+id/valueRol"
        android:layout_marginLeft="5dp"
        android:textSize="13dp"
        android:textColor="@color/grisOscuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valueComite"
        android:layout_toRightOf="@id/labelRol"
        android:text="@string/tipoUsuarioEjemplo"
        />

    <TextView
        android:id="@+id/labelUltimaActividad"
        android:layout_marginLeft="5dp"
        android:textSize="13dp"
        android:textColor="@color/grisOscuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelRol"
        android:text="@string/ultimaVezActiva"
        />

    <TextView
        android:id="@+id/valueUltimaActividad"
        android:layout_marginLeft="5dp"
        android:textSize="13dp"
        android:textColor="@color/grisOscuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valueRol"
        android:layout_toRightOf="@id/labelUltimaActividad"
        android:text="@string/fechaEjemplo"
        />




</RelativeLayout>