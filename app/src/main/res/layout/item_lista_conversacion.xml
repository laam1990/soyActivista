<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <!-- Nombre del otro Usuario -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/valueNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        android:textSize="18dp"
        android:text="@string/nombreEjemplo"
        />
        </LinearLayout>
    <!-- Separator -->
    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:background="@color/grisOscuro"
        android:layout_toRightOf="@id/valueNombre"/>

    <!-- Estado -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/valueEstado"
        android:layout_marginLeft="5dp"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/valueNombre"
        android:text="@string/estado"
        />
        </LinearLayout>
    <!-- Municipio -->

        <!--<TextView
            android:id="@+id/valueMunicipio"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/valueEstado"
            android:text="@string/municipio"
            />-->
        </LinearLayout>

        <!-- Cargo -->

    <TextView
        android:id="@+id/valueCargo"
        android:layout_marginLeft="5dp"
        android:textSize="13dp"
        android:textColor="@color/grisOscuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valueNombre"
        android:text="@string/cargoEjemplo"
        />

    <!-- Comite -->

    <TextView
        android:id="@+id/valueComite"
        android:layout_marginLeft="5dp"
        android:textSize="13dp"
        android:textColor="@color/grisOscuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valueCargo"
        android:text="@string/comiteEjemplo"
        />

    <TextView
        android:id="@+id/valueRol"
        android:layout_marginLeft="5dp"
        android:textSize="13dp"
        android:textColor="@color/grisOscuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valueComite"
        android:text="@string/tipoUsuarioEjemplo"
        />

    <TextView
        android:id="@+id/valueUltimaActividad"
        android:layout_marginLeft="5dp"
        android:textSize="13dp"
        android:textColor="@color/grisOscuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valueRol"
        android:text="@string/fechaEjemplo"
        />




</LinearLayout>