<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ListEstadisticaUsuario"
        android:background="?colorPrimary">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/triviaLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/finPartida"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/txt_20sp"
                android:background="@drawable/ic_trivia_formacion"/>
            <View
                android:id="@+id/viewUsuario"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@color/white"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/valueNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombreEjemplo"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="@dimen/estadisticasTriviaGrande"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/puntosSuspensivos"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="@dimen/estadisticasTriviaGrande"
                android:layout_marginTop="-30dp"/>


            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logroTrivia"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/estadisticasTriviaPequeño"/>

            <TextView
                android:id="@+id/valueRango"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipoActivista"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="@dimen/estadisticasTriviaGrande"/>

            <View
                android:id="@+id/viewTipoActivista"
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:textStyle="bold"
                android:id="@+id/textEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/suscripcion"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/estadisticasTriviaPequeño"/>

            <TextView
                android:id="@+id/valuePosicion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rankingUsuarios"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="@dimen/estadisticasTriviaGrande"/>

            <View
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/puntosAcumulados"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/estadisticasTriviaPequeño"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
            <TextView
                android:id="@+id/valuePuntos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/puntosEjemplo"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="@dimen/estadisticasTriviaGrande"/>
                <TextView
                    android:id="@+id/textPuntos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" puntos."
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="@dimen/estadisticasTriviaGrande"/>
            </LinearLayout>
            <View
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/partidasJugadas"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/estadisticasTriviaPequeño"/>

            <TextView
                android:id="@+id/valuePartidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/partidasEjemplo"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="@dimen/estadisticasTriviaGrande"/>

            <View
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp" />

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/desempeñoPreguntas"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/estadisticasTriviaPequeño"/>

            <TextView
                android:id="@+id/valuePreguntas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dificultadEjemplo"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="@dimen/estadisticasTriviaGrande"/>

            <Button
                android:id="@+id/buttonMenuPrincipal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_gravity="center"
                android:text="@string/volverMenuPrincipal"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp"
                />

        </LinearLayout>
    </ScrollView>