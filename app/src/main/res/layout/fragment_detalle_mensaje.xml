<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/messageUser"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_edicion_partido"
        android:backgroundTint="?colorPrimary"
         />

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <TextView
        android:id="@+id/valueNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jhon Doe"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_alignTop="@+id/messageUser"
        android:layout_alignRight="@+id/valueMunicipio"
        android:layout_alignEnd="@+id/valueMunicipio"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/valueEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/estado"
        android:textSize="15dp"
        android:layout_above="@+id/valueFecha"
        android:layout_alignLeft="@+id/valueNombre"
        android:layout_alignStart="@+id/valueNombre" />

    <TextView
        android:id="@+id/valueMunicipio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/municipio"
        android:textSize="15dp"
        android:layout_above="@+id/valueFecha"
        android:layout_alignRight="@+id/separator"
        android:layout_alignEnd="@+id/separator"
        android:layout_marginRight="56dp"
        android:layout_marginEnd="56dp" />

    <TextView
        android:id="@+id/valueFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hintInicio"
        android:textSize="12dp"
        android:layout_alignBottom="@+id/messageUser"
        android:layout_alignLeft="@+id/valueEstado"
        android:layout_alignStart="@+id/valueEstado" />
            </LinearLayout>

        </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/grisOscuro"
        android:layout_below="@+id/valueFecha"
        />

    <TextView
        android:id="@+id/valueTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator"
        android:layout_marginTop="10dp"
        android:text="@string/mensajePrueba"
        />

    <ImageView
        android:id="@+id/valueAdjunto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        />


    <ProgressBar
        android:id="@+id/ProgressBar"
        style="@android:style/Widget.ProgressBar.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valueTexto"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/botonReportar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/reportar"
        android:textColor="@color/white"
        android:layout_gravity="center_vertical"
        />

    <Button
        android:id="@+id/botonEliminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/eliminarMensaje"
        android:textColor="@color/white"
        android:layout_gravity="center_vertical"
        android:visibility="gone"/>
    </LinearLayout>



