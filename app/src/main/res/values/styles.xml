    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorButtonNormal">@color/indigo</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/indigo</item>
        <!--  theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/indigo</item>
        <item name="actionBarStyle">@color/indigo</item>
        <!-- <item name="android:colorButtonNormal">@color/indigo</item>-->
        <item name="android:actionButtonStyle">@color/indigo</item>
        <item name="android:windowBackground">@color/grey200</item>
